@model Blog.Business.Models.Autor

@{
    ViewData["Title"] = "Detalhes do Autor";
    var userId = @ViewBag.IdUser ?? Guid.Empty;
    var isAdmin = @ViewBag.Admin ?? false;
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <h1 class="text-primary">Detalhes do Autor</h1>
            <hr />
            <dl class="row">
                <dt class="col-sm-3 font-weight-bold">
                    @Html.DisplayNameFor(model => model.Nome)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Nome)
                </dd>

                <dt class="col-sm-3 font-weight-bold">
                    @Html.DisplayNameFor(model => model.Email)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Email)
                </dd>

                <dt class="col-sm-3 font-weight-bold">
                    @Html.DisplayNameFor(model => model.Biografia)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Biografia)
                </dd>
            </dl>

            <div class="mt-4">
                @if (userId == Model.Id || isAdmin)
                {
                    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning">Editar</a>
                }
                else
                {
                    <button class="btn btn-secondary" disabled>Editar</button>
                }
                <a asp-action="Index" class="btn btn btn-primary ml-2">Voltar à Lista</a>
            </div>
        </div>
    </div>
</div>