@model Blog.Business.Models.Autor

@{
    ViewData["Title"] = "Detalhes do Autor";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <h1 class="text-primary">Detalhes do Autor</h1>
            <hr />
            <dl class="row">
                <dt class="col-sm-3 font-weight-bold">
                    @Html.DisplayNameFor(model => model.Nome)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Nome)
                </dd>

                <dt class="col-sm-3 font-weight-bold">
                    @Html.DisplayNameFor(model => model.Email)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Email)
                </dd>

                <dt class="col-sm-3 font-weight-bold">
                    @Html.DisplayNameFor(model => model.Biografia)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Biografia)
                </dd>
            </dl>

            <div class="mt-4">
                <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning">Editar</a>
                <a asp-action="Index" class="btn btn-secondary ml-2">Voltar à Lista</a>
            </div>
        </div>
    </div>
</div>