@model Blog.Business.Models.Postagem

@{
    ViewData["Title"] = "Excluir";
}

@await Component.InvokeAsync("Summary")

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <h1 class="text">Excluir Postagem</h1>
            <h3 class="text">Tem certeza de que deseja excluir esta postagem?</h3>
            <div class="card border-danger mb-3">
                <div class="card-header bg-danger text-white">
                    <h4>Detalhes da Postagem</h4>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-3">Título</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Titulo)</dd>

                        <dt class="col-sm-3">Conteúdo</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Conteudo)</dd>

                        <dt class="col-sm-3">Data de Criação</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.DataCriacao)</dd>
                    </dl>
                </div>
            </div>

            <form asp-action="DeleteConfirmado">
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <a asp-action="Index" class="btn btn-primary">Cancelar</a>
                    <button type="submit" class="btn btn-danger">Excluir</button>
                </div>
            </form>
        </div>
    </div>
</div>