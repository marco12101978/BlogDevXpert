@using Blog.Business.Models
@model IEnumerable<Postagem>

<h2>Postagens Recentes</h2>

<table class="table">
    <thead>
        <tr>
            <th>Título</th>
            <th>Autor</th>
            <th>Data</th>
        </tr>
    </thead>
    <tbody>
        @if (Model == null || !Model.Any())
        {
           <p>Nenhum post disponível no momento.</p>
        }
        else
        {
            @foreach (var post in Model)
            {
                <tr>
                    <td>@post.Titulo</td>
                    <td>@post.Autor?.Nome</td>
                    <td>@post.DataCriacao?.ToShortDateString()</td>
                </tr>
            }
        }
    </tbody>
</table>