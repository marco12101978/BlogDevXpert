@using Blog.Business.Models
@model IEnumerable<Postagem>

@{
    ViewBag.Title = "Postagens Recentes";
}

<div class="container blog-list">
    <h1 class="texto-centralizado">@ViewBag.Title</h1>
    
    <div class="row">
        @foreach (var postagem in Model)
        {
            <div class="col-md-8 offset-md-2">
                <article class="post">
                    <header class="post-header">
                        <h2 class="post-title">
                            <a class="post-title" href="@Url.Action("Detalhes", "Postagem", new { id = postagem.Id })">
                                @Html.DisplayFor(modelItem => postagem.Titulo)
                            </a>
                        </h2>
                        <p class="post-meta">
                            Publicado por <strong>@postagem.Autor?.Nome</strong> em @postagem.DataCriacao?.ToString("dd/MM/yyyy")
                        </p>
                    </header>
                    <div class="post-excerpt">
                        <p>@(postagem.Conteudo?.Length > 200 ? postagem.Conteudo.Substring(0, 200) + "..." : postagem.Conteudo)</p>
                    </div>
                    <footer class="post-footer">
                        <a href="@Url.Action("Detalhes", "Postagem", new { id = postagem.Id })" class="btn btn-primary">Leia Mais</a>
                    </footer>
                </article>
                <hr />
            </div>
        }
    </div>
</div>
