@using Blog.Business.Models
@model Postagem

<h2>Confirmação de Exclusão</h2>

@await Component.InvokeAsync("Summary")

<div>
    <h4>Tem certeza de que deseja excluir esta postagem?</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Título
        </dt>
        <dd class="col-sm-10">
            @Model.Titulo
        </dd>
        <dt class="col-sm-2">
            Conteúdo
        </dt>
        <dd class="col-sm-10">
            @Model.Conteudo
        </dd>
    </dl>

    <form asp-action="DeleteConfirmado" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Excluir </button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>