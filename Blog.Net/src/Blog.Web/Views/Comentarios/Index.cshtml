@using Blog.Web.ViewModels
@model IEnumerable<ComentarioViewModel>

@{
    ViewData["Title"] = "Lista de Comentários";
}

<div class="container mt-4">
    <h1 class="text-primary">Lista de Comentários</h1>

    <p>
        <a asp-action="Create" class="btn btn-success">Criar Novo Comentário</a>
    </p>

    <table class="table table-striped">
        <thead class="thead-dark">
            <tr>
                <th>@Html.DisplayNameFor(model => model.First().Conteudo)</th>
                <th>@Html.DisplayNameFor(model => model.First().DataPostagem)</th>
                <th>@Html.DisplayNameFor(model => model.First().NomeAutor)</th>
                <th>@Html.DisplayNameFor(model => model.First().IdAutor)</th>
                <th>@Html.DisplayNameFor(model => model.First().Postagem)</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Conteudo)</td>
                    <td>@Html.DisplayFor(modelItem => item.DataPostagem)</td>
                    <td>@Html.DisplayFor(modelItem => item.NomeAutor)</td>
                    <td>@Html.DisplayFor(modelItem => item.IdAutor)</td>
                    <td>@Html.DisplayFor(modelItem => item.Postagem.Conteudo)</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Editar</a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Detalhes</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Excluir</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>