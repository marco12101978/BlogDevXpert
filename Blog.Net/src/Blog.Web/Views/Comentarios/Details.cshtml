@using Blog.Business.Models
@model Comentario

@{
     ViewData["Title"] = "Detalhes do Comentário";
}


<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <h1 class="text-primary">Detalhes do Comentário</h1>
            <div class="card border-info mb-3">
                <div class="card-header bg-info text-white">
                    <h4>Informações do Comentário</h4>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-3">Conteúdo</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Conteudo)</dd>

                        <dt class="col-sm-3">Data da Postagem</dt>

                        <dd class="col-sm-10">
                            @{
                                var dataPostagem = Model.DataPostagem.HasValue
                                    ? Model.DataPostagem.Value.ToString("dd/MM/yyyy HH:mm")
                                    : "N/A";
                            }
                            @dataPostagem
                        </dd>

                        <dt class="col-sm-3">Nome do Autor</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.NomeAutor)</dd>

                        <dt class="col-sm-3">ID do Autor</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.IdAutor)</dd>

                        <dt class="col-sm-3">Conteúdo da Postagem</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Postagem.Conteudo)</dd>
                    </dl>
                </div>
            </div>

            <div class="form-group">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Editar</a>
                <button type="button" class="btn btn-secondary" onclick="history.back()">Voltar</button>
            </div>
        </div>
    </div>
</div>