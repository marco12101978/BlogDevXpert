@using Blog.Web.ViewModels
@model ComentarioViewModel

@{

    ViewData["Title"] = "Criar Comentário";
    var idPostagem = ViewData["idPostagem"];
}

@await Component.InvokeAsync("Summary")


<div class="container mt-4">
    <div class="row">
        <div class="col-md-6">
            <h1 class="text-primary">@ViewData["Title"]</h1>
            <hr />
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="form-group">
                    <label asp-for="Conteudo" class="control-label"></label>
                    <textarea asp-for="Conteudo" class="form-control" rows="5"></textarea>
                    <span asp-validation-for="Conteudo" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="IdPostagem" class="form-control" type="hidden" value="@idPostagem" />
                </div>

                <div class="form-group mt-3">
                    <input type="submit" value="Criar" class="btn btn-primary" />
                    <button type="button" class="btn btn-secondary" onclick="history.back()">Voltar</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}